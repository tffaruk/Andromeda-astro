---
import Base from "@layouts/Base.astro";
import Banner from "@layouts/partials/Banner.astro";
import Brand from "@layouts/partials/Brand.astro";
import Features from "@layouts/partials/Features.astro";
import VideoSection from "@layouts/partials/VideoSection.astro";
import Service from "@layouts/partials/Service.astro";
import Testimonial from "@layouts/partials/Testimonial.astro";

import { getEntryBySlug } from "astro:content";

const homepage = await getEntryBySlug("homepage", "index");
const { banner,brands,features,intro,service,testimonial} = homepage.data;

---

<Base>
 <Banner banner={banner}/>
 <Brand brands={brands} />
 <Features features={features} />
 <VideoSection intro={intro}/>
 <Service service={service}/>
 <Testimonial testimonial={testimonial} />

</Base>
