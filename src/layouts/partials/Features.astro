---
import FeatureSlider from "@layouts/components/FeatureSlider";
import { markdownify } from "@lib/utils/textConverter";
const {features}=Astro.props
---
<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center" data-aos="fed-up">
          <p set:html={markdownify(features.sub_title)} class="uppercase mb-4 text-[0.9rem]" />
          <h2 set:html={markdownify(features.title)} class="section-title" />
          <p set:html={markdownify(features.description)} class="text-text text-[.9rem]"/>
          <FeatureSlider features={features} client:load />
        </div>

      </div>
    </div>
  </div>
</section>
