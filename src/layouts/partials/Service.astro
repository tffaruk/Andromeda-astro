---
import { Image } from "@astrojs/image/components";
const {service}=Astro.props
---
<section class="section">
<div class="container">
 {
  service.map((el,i)=>
  <div class="row justify-center items-center mb-6" >
    <div class={`lg:col-5 ${i%2!==0?"order-1":"order-0"}`} data-aos="fade-up">
      <div class="mb-0">
        <p class="text-uppercase">{el.subtitle}</p>
        <h2 class="section-title after:-translate-x-0 after:left-0">{el.title}</h2>
    <p>{el.description}</p>
  </div>
</div>
<div class={`lg:col-6 mt-4 lg:mt-0 ${i%2!==0?"order-0":"order-1"}`} data-aos="fade-up" data-aos-delay="100">
  <div class="pl-0 lg:pl-4">
   <Image src={el.image} height={511} width={575}  class="max-w-full"/>
  </div>
</div>
</div>)
 }
</div>
</section>
